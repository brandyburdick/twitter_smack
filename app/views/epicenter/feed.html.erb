
<% if user_signed_in? %>
	<h1><%= current_user.username %>'s TwitterSmack Feed</h1>

	<p>Here is what your friends are saying:</p>

	<div>
		<% @following_tweets.each do |tweet| %>
			<div>
				<p><%= tweet.user.username %></p>
				<p><%= tweet.message %></p>
			</div>
		<% end %>
	</div>
<% else %>
	<h1>You must be logged in to view your feed.</h1>
	<%= link_to "Sign In", new_user_session_path, class: 'btn btn-success btn-lg' %>
<% end %>
