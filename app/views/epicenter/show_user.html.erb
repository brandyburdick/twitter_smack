<h1><%= @user.username %>'s Profile &amp; Tweets</h1>

<p><%= @user.name %></p>
<p>From <%= @user.location %></p>
<p>Bio and Other Tidbits about <%= @user.name %>:</p>
<p><%= @user.bio %></p>

<% if current_user.id != @user.id %>
	<p>
		<% if current_user.following.include?(@user.id) %>
			<%= link_to "Unfollow", unfollow_path(id: @user.id), class: "btn btn-danger" %>
		<% else %>
			<%= link_to "Follow", now_following_path(id: @user.id), class: "btn btn-primary" %>
		<% end %>
	</p>
<% end %>

<% @user.tweets.each do |tweet| %>
	<div>
		<p><strong><%= tweet.user.username %></strong></p>
		<p><%= tweet.message %></p>
		
	</div>
<% end %>



